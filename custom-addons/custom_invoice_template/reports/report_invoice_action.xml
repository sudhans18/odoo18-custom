<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_custom_invoice_ekki" model="report.paperformat">
            <field name="name">Custom Invoice - Ekki (A4)</field>
            <field name="default" eval="False" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
            <field name="css_margins" eval="True" />
            <field name="disable_shrinking" eval="True" />
        </record>

        <record id="action_report_invoice_document_custom_full" model="ir.actions.report">
            <field name="name">Custom Invoice</field>
            <field name="model">account.move</field>
            <field name="type">ir.actions.report</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_invoice_template.report_custom_invoice</field>
            <field name="report_file">custom_invoice_template.report_custom_invoice</field>
            <field name="paperformat_id" ref="custom_invoice_template.paperformat_custom_invoice_ekki"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
